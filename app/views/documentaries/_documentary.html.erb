<div id="<%= dom_id documentary %>" class="card" style="width: 28rem;">
  <div class="card-body">
    <h5 class="card-title">Documental</h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= documentary.Name %></h6>
    <p class="card-text"><%= documentary.Synopsis %></p>
    <h5 class="card-title">Director</h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= documentary.Director %></h6>
    <%= link_to "Editar", edit_documentary_path(@documentary), :class => "btn btn-primary" %>
    <%= link_to "Volver al Listado", root_path, :class => "btn btn-secondary" %>
  </div>
</div>
