<p style="color: green"><%= notice %></p>

<h1>Documentales</h1>

<div class="p-1">
  <select onchange="window.location=this.value">
    <option value="" selected>Crear nuevo(a)</option>
    <option value="<%=new_movie_path%>">Pel√≠cula</option>
    <option value="<%=new_series_path%>">Serie</option>
    <option value="<%=new_documentary_path%>">Documental</option>
  </select>
</div>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombre</th>
      <th scope="col">Director</th>
      <th scope="col">Sinopsis</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @i = 0 %>
    <% @documentaries.each do |documentary| %>
    <tr>
      <th scope="row"><%= @i = @i+1 %></th>
      <td><%= documentary.Name %></td>
      <td><%= documentary.Director %></td>
      <td><%= documentary.Synopsis.byteslice(0, 60) %>...</td>
      <td><%= link_to "Ver", documentary, :class => "btn btn-primary" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
